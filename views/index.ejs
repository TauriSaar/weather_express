<%- include('header'); %>
<body>
<div class="container">
  <header>
    <div class="weather-icon"><i class="fa-solid fa-globe fa-2x"></i></div>
  </header>
  <div class="weather-title">
    <h1>Weather Express</h1>
    <p>View the current weather for your city</p>
  </div>
  <form action="/" method="POST">
    <input type="text" name="city" class="ghost-input" placeholder="Enter a city">
  </form>

  <div class="result">
    <% if(temperature !== null)  {%>
      <h1 class="temp"><%= temperature %> CÂ°</h1>
    <% } %>

    <div class="icon-des">
      <% if(icon !== null)  {%>
        <img class="icon" src="http://openweathermap.org/img/w/<%= icon %>.png" alt="">
      <% } %>
      <% if(description !== null)  {%>
        <h3><%= description %></h3>
      <% } %>
    </div>

    <% if(city !== null)  {%>
      <p class="city"><%= city %></p>
    <% } %>

  </div>
</div>
</body>

<%- include('footer'); %>